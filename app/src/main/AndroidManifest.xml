<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_app_easys_version4">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.AddSuppliersScrollingActivity"
            android:label="@string/title_activity_add_suppliers_scrolling"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.UpdateSupplierActivity" />
        <activity android:name=".activities.DeleteSupplierActivity" />
        <activity android:name=".activities.OptionsPageActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>